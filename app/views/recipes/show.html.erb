    

    <p> recipe name is <%= @recipe.name %> </p>

 <div class = "row">
   <div class="col-md-4 pull-right center">
     <%=link_to (gravatar_for @recipe.chef, size: 200),chef_path(@recipe.chef) %>
     <p>
     	<h5>Brought to you by: <%= @recipe.chef.chefs%></h5>
     </p>
   </div>
     <div class = "col-md-8">
       <h3><%= @recipe.summary%></h3>
         <div class = "show_picture">
          <%= image_tag(@recipe.picture.url,class: "gravatar") if @recipe.picture? %>
         </div>
         <div class= "well">
          <p>
            <strong>Steps:</strong>
          </p>   	
            <%= simple_format(@recipe.description) %>
            <div class="pull-right">
              <%= link_to like_recipe_path(@recipe, like: true), method: :post do  %>
              <i class = "glyphicon glyphicon-thumbs-up"></i> &nbsp <%= @recipe.thumbs_up_total %>
              <% end %>&nbsp&nbsp&nbsp&nbsp
              <%= link_to like_recipe_path(@recipe, like: false), method: :post do  %>
              <i class = "glyphicon glyphicon-thumbs-down"></i> &nbsp <%= @recipe.thumbs_down_total %>
              <% end %>
            </div>
         </div> 
    </div>
 </div>
     <% if logged_in? and @recipe.chef == current_user %>
     <h4> <%= link_to "Edit This Reipe",edit_recipe_path,class: "btn btn-success" %></h4>
     <% end %>
     <h5> <%= link_to "Return to Recipes Menu",recipes_path,class: "btn btn-warning btn-small" %> </h5>